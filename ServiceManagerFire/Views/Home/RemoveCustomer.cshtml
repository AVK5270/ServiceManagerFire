@model Customer
@{
    ViewData["Title"] = "RemoveCustomer";
}

<h3>Подтвердите удаление заказчика</h3>

<div>
    <table class="table">
        <tr> <th>Название</th><th>Город</th><th>Контакты</th></tr>
        <tbody>

            <tr>
                <td>@Model.Name.ToString() </td>
                <td>@Model.City.ToString() </td>
                <td>@Model.Description.ToString() </td>
            </tr>

        </tbody>
    </table>

    <div>
        <form asp-controller="Home" asp-action="RemoveCustomer" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
