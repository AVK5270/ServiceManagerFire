@model Incident
@{
    ViewData["Title"] = "EditIncidentSuper";
}

<h2>Внести изменения:</h2>


<form asp-action="EditIncidentSuper" asp-controller="home" asp-route-id="@Model.Id">

    <div class="form-group">
        <label asp-for="ObjektId" class="control-label">Объект</label>
        <select asp-for="ObjektId" asp-items="ViewBag.Objekt"></select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="UserId" class="control-label">Ответственный</label>
        <select asp-for="UserId" asp-items="ViewBag.User"></select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="StatusId" class="control-label">Статус</label>
        <select asp-for="StatusId" asp-items="ViewBag.Status"></select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="DateTime" class="control-label">Дата создания</label>
        <input type="datetime" asp-for="DateTime" class="form-control" />
    </div>
    
  

    <br />
    <div class="form-group">
        <input type="submit" value="Изменить" class="btn btn-default" />
    </div>


</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}