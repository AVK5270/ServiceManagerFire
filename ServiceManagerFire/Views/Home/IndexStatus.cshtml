    <tr> <th>Название</th></tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name.ToString() </td>

                <td>
                    <a asp-action="RemoveStatus" asp-route-id="@item.Id"> Удалить</a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>
