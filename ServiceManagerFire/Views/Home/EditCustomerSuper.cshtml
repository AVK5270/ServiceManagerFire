@model Customer
@{
    ViewData["Title"] = "EditCustomerSuper";
}

<h2>Внести изменения:</h2>


<form asp-action="EditCustomerSuper" asp-controller="home" asp-route-id="@Model.Id">

    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="City" class="control-label">Город</label>
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Description" class="control-label">Контакты</label>
        <br />
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br />

    <br />
    <div class="form-group">
        <input type="submit" value="Изменить" class="btn btn-default" />
    </div>


</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}