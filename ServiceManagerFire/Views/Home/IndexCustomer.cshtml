@using ServiceManagerFire.Models;

@model List<Customer>


    <h2>Заказчики</h2>


<table class="table">
    <tr> <th>Название</th><th>Город</th><th>Контакты</th> </tr>
    <tbody>
     @foreach (var item in Model)
        {
        <tr>
            <td>@item.Name.ToString() </td>
            <td>@item.City.ToString() </td>
            <td>@item.Description.ToString() </td>

            <td>
                <a asp-action="RemoveCustomer" asp-route-id="@item.Id"> Удалить</a>
                <br />
                <a asp-action="EditCustomer" asp-route-id="@item.Id"> Изменить</a>>
            </td>
        </tr>
        }
    </tbody>
</table>
<a asp-action="CreateCustomer" class="btn btn-default"> Добавить  </a>
